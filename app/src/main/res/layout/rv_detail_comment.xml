<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.constraint.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="76dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <ImageView
            android:id="@+id/imv_comment_profile"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/kakao"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginStart="14dp"/>

        <TextView
            android:id="@+id/txv_comment_nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@+id/imv_comment_profile"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="10dp"
            android:layout_marginTop="8dp"
            android:textSize="12sp"
            android:text="댓글러"
            android:textColor="@color/black_60"/>

        <TextView
            android:id="@+id/txv_comment_content"
            android:layout_width="242dp"
            android:layout_height="28dp"
            app:layout_constraintLeft_toRightOf="@+id/imv_comment_profile"
            app:layout_constraintTop_toBottomOf="@+id/txv_comment_nickname"
            android:layout_marginStart="10dp"
            android:textColor="@color/black_60"
            android:text="안녕하세요"
            android:textSize="13.6sp"/>

        <TextView
            android:id="@+id/txv_comment_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@+id/imv_comment_profile"
            app:layout_constraintTop_toBottomOf="@+id/txv_comment_content"
            android:textSize="12sp"
            android:textColor="@color/black_38"
            android:text="3분 전"
            android:layout_marginStart="10dp"/>

        <TextView
            android:id="@+id/txv_comment_reply_cnt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/txv_comment_content"
            app:layout_constraintLeft_toRightOf="@+id/txv_comment_time"
            android:layout_marginStart="10dp"
            android:text="답글 1개"
            android:textSize="12sp"
            android:textColor="@color/black_38"/>

        <ImageView
            android:id="@+id/imv_comment_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:src="@drawable/ic_more_normal"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </android.support.constraint.ConstraintLayout>

</android.support.constraint.ConstraintLayout>